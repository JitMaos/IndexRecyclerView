<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="app_name">lib</string>

    <dimen name="def_index_bar_margin_horizontal">12dp</dimen>
    <dimen name="def_index_bar_margin_vertical">16dp</dimen>
    <dimen name="def_index_bar_padding_horizontal">4dp</dimen>
    <dimen name="def_index_bar_padding_vertical">8dp</dimen>
    <dimen name="def_index_bar_text_size">16sp</dimen>
    <dimen name="def_index_bar_preview_text_size">50sp</dimen>
    <dimen name="def_index_bar_preview_rect_size">80dp</dimen>
    <dimen name="def_index_bar_preview_rect_radius">4dp</dimen>

    <color name="def_index_bar_text_color">#7dffffff</color>
    <color name="def_index_bar_selected_text_color">#ffffff</color>
    <color name="def_index_bar_preview_text_color">#ffffff</color>
    <color name="def_index_bar_background">#c3000000</color>
    <color name="def_index_bar_preview_index_background">#c3000000</color>

    <integer name="def_index_bar_auto_dismiss_time">2000</integer>

    <declare-styleable name="IndexRecyclerView">
        <!--布局模式. -->
        <attr name="index_bar_layout_mode" format="enum">
            <!-- 填充满整个高度. -->
            <enum name="fill" value="1"/>
            <!-- 居中. -->
            <enum name="center" value="2"/>
            <!-- 居上. -->
            <enum name="top" value="3"/>
            <!-- 居下. -->
            <enum name="bottom" value="4"/>
        </attr>
        <!-- 索引条横向margin值 -->
        <attr name="index_bar_margin_horizontal" format="dimension"/>
        <!-- 索引条纵向margin值 -->
        <attr name="index_bar_margin_vertical" format="dimension"/>
        <!-- 索引条横向padding值 -->
        <attr name="index_bar_padding_horizontal" format="dimension"/>
        <!-- 索引条纵向padding值 -->
        <attr name="index_bar_padding_vertical" format="dimension"/>
        <!-- 索引条文字颜色 -->
        <attr name="index_bar_text_color" format="color"/>
        <!-- 索引条文字大小 -->
        <attr name="index_bar_text_size" format="dimension"/>
        <!-- 索引条选中文字颜色 -->
        <attr name="index_bar_selected_text_color" format="color"/>
        <!-- 索引条选中文字大小 -->
        <!--<attr name="index_bar_selected_text_size" format="dimension"/>-->
        <!-- 索引条背景 -->
        <attr name="index_bar_background" format="color"/>
        <!-- 索引预览文字颜色 -->
        <attr name="index_bar_preview_text_color" format="color"/>
        <!-- 索引预览文字大小 -->
        <attr name="index_bar_preview_text_size" format="dimension"/>
        <!-- 索引预览框背景 -->
        <attr name="index_bar_preview_rect_background" format="color"/>
        <!-- 索引预览框大小 -->
        <attr name="index_bar_preview_rect_size" format="dimension"/>
        <!-- 索引预览框圆角大小 -->
        <attr name="index_bar_preview_rect_radius" format="dimension"/>
        <!-- 索引条是否自动消失，默认为true -->
        <attr name="index_bar_auto_dismiss" format="boolean"/>
        <!-- 索引条是否自动消失时间 -->
        <attr name="index_bar_auto_dismiss_time" format="integer"/>
    </declare-styleable>
</resources>